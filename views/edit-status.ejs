<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h2>Update Submission Status for <%= student.fullname %> (<%= student.htnum %>)</h2>

<form method="POST" action="/student/<%= student._id %>/edit-status">
    <% if (facultySubjects.length > 0) { %>
        <% facultySubjects.forEach(sub => { %>
            <div>
                <h3><%= sub.name %></h3>
                <label>CIE Status:</label>
                <select name="CIE_<%= sub._id %>">
                    <option value="Pending">Pending</option>
                    <option value="Completed">Completed</option>
                  
                </select>
                <label>TA Status:</label>
                <select name="TA_<%= sub._id %>">
                    <option value="Pending">Pending</option>
                    <option value="Completed">Completed</option>
              
                </select>
            </div>
            <hr>
        <% }) %>
        <button type="submit">Update Status</button>
    <% } else { %>
        <p>No subjects found for this faculty in this division.</p>
    <% } %>
</form>

</body>
</html>
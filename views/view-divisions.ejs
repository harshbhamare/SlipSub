  <br><br>

  <!-- Display Subjects -->
  <table border="1">
    <thead>
        <tr>
            <th>Subject Name</th>
            <th>Subject Code</th>
            <th>Faculty Assigned</th>
        </tr>
    </thead>
    <tbody>
        <% subjects.forEach(subject => { %>
            <tr>
                <td><%= subject.name %></td>
                <td><%= subject.code %></td>
                <td>
                    <% if (subject.faculty.length > 0) { %>
                        <%= subject.faculty.map(fac => fac.name).join(", ") %>
                    <% } else { %>
                        No Faculty Assigned
                    <% } %>
                </td>
            </tr>
        <% }); %>
    </tbody>
